<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="consumption_data"
            type="com.globalspace.miljonsales.ui.add_details_dashboard.Add_Consumption_items" />

        <variable
            name="rvconsumption_data"
            type="com.globalspace.miljonsales.ui.add_details.AddDetailsViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="8dp"
        android:outlineSpotShadowColor="@color/colorShimmer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvstrength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{consumption_data.strength}"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvbrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@{consumption_data.brand}"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvstrength" />

            <TextView
                android:id="@+id/tvqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text= "@{@string/qty(consumption_data.quantity)}"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvbrand" />

            <TextView
                android:id="@+id/tvrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text= "@{@string/rate(consumption_data.rate)}"
                android:textSize="14dp"
                app:layout_constraintEnd_toStartOf="@+id/tvmrprate"
                app:layout_constraintStart_toEndOf="@+id/tvqty"
                app:layout_constraintTop_toBottomOf="@+id/tvbrand" />

            <TextView
                android:id="@+id/tvmrprate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text= "@{@string/mrp(consumption_data.mrp)}"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvrate"
                app:layout_constraintTop_toBottomOf="@+id/tvbrand" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>